<Window x:Class="Prakt19.AuthWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prakt19"
        mc:Ignorable="d"
        Title="AuthWin"  Height="168.443" Width="175.41">
    <Grid>
        <StackPanel>
            <Label Content="Логин"></Label>
            <TextBox x:Name="tbLoginInput"></TextBox>
            <Label Content="Пароль"></Label>
            <PasswordBox x:Name="pbPassInput" PasswordChar="0"></PasswordBox>
            <Button Content="Войти" IsDefault="True" Click="AuthAttempt"></Button>
            <Button Content="Отмена" Click="Exit"></Button>
        </StackPanel>
    </Grid>
</Window>
